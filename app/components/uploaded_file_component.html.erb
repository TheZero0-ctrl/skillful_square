<div
  class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-5"
  data-controller="uploaded-file"
>
  <div class="sm:col-span-3">
    <div class="flex flex-col">
      <div class="flex mb-4 flex-col bg-gray-200 border hover:shadow-amber-300 rounded-xl hover:shadow-md transition">
        <div class="p-4 md:p-5">
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2 text-gray-700">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>
              <div>
                <p><%= @name %></p>
                <p class="font-extralight text-sm"><%= @file_type %> <%= @file_size %></p>
              </div>
            </div>
            <div class="ps-3 text-gray-700 flex items-center gap-4">
              <%= button_tag data: {"uploaded-file-target": "open", action: 'click->uploaded-file#open'} do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                </svg>
              <% end %>
              <%= button_tag data: {"uploaded-file-target": "close", action: 'click->uploaded-file#close'}, class: "hidden" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
                </svg>
              <% end %>
              <%= button_tag data: {action: 'click->uploaded-file#delete'} do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
        <div 
          data-uploaded-file-target="form"
          class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-5 text-gray-800 p-4 hidden"
        >
          <div class="sm:col-span-5">
            <%= label_tag :name, "Name", class:"block text-sm font-medium leading-6" %>
            <div class="mt-2">
              <%= text_field_tag :name, @name, class: "block w-full rounded-md border-0 p-2 bg-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
          <div class="sm:col-span-5">
            <%= label_tag :description, "Description", class:"block text-sm font-medium leading-6" %>
            <div class="mt-2">
              <%= text_field_tag :description, @description, class: "block w-full rounded-md border-0 p-2 bg-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
