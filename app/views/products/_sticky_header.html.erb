<section class="sticky top-0 inset-x-0 z-30 w-ful border-b border-gray-400 text-sm py-0 pb-0 lg:py-8 lg:pb-4 bg-gray-700">
  <div class="relative max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8" aria-label="Global">
    <div class="w-full text-4xl text-accent-color tracking-wider">
      <%= product.name %>
    </div>
    <div id="navbar-collapse-with-animation" class="hs-collapse overflow-hidden transition-all duration-300 basis-full grow">
      <div class="flex flex-col gap-y-4 gap-x-0 mt-5 sm:flex-row sm:items-center sm:justify-end sm:gap-y-0 sm:gap-x-7 sm:mt-0 sm:pl-7 p-5">
        <% if product.published? %>
          <%= render 'products/product_unpub', product: product%>
        <% else %>
          <%= render 'products/product_pub', product: product%>
        <% end %>
        <button type="submit" class="group relative inline-block text-sm font-medium text-gray-500 focus:outline-none focus:ring active:text-orange-400 cursor-pointer">
          <span class="absolute inset-0 border border-current"></span>
          <span class="block border border-current bg-white px-4 lg:px-12 py-3 transition-transform group-hover:-translate-x-1 group-hover:-translate-y-1">
            Save Change
          </span>
        </button>
      </div>
    </div>
  </div>
  <div class="flex mt-4 gap-4 px-4 sm:px-6 lg:px-8">
    <%= link_to edit_product_path(product), class: tab_button_class(edit_product_path(product)) do %>
      <span class="<%= tab_text_class(edit_product_path(product)) %>">Product</span>
    <% end %>
    <%= link_to product_contents_path(product), class: tab_button_class(product_contents_path(product)) do %>
      <span class="<%= tab_text_class(product_contents_path(product)) %>">Contents</span>
    <% end %>
  </div>
</section>
