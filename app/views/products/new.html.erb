<!-- Comment Form -->
<div class="w-full px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="mx-auto max-w-2xl">
    <div class="text-center">
      <h2 class="text-xl font-bold sm:text-3xl text-white">
        Create a new Product
      </h2>
    </div>
    <!-- Card -->
    <div class="mt-5 p-4 relative z-10 border rounded-xl sm:mt-10 md:p-10 bg-gray-800 border-gray-700">
      <% if @product.errors.any? %>
        <div id="error_explanation" class="mb-2 text-red-600">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product being created</h2>
          <ul>
            <% @product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @product do |f|%>
        <div class="mb-4 sm:mb-8">
          <%= f.label :name, class: "block mb-2 text-sm font-medium text-white" %>
          <%= f.text_field :name, class: "py-3 px-4 block w-full rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 sm:p-4 bg-gray-800 border-gray-700 text-gray-400", placeholder: "Product name"%>
        </div>
        <div class="mb-4 sm:mb-8">
          <%= f.label :price, class: "block mb-2 text-sm font-medium text-white" %>
          <%= f.text_field :price, class: "py-3 px-4 block w-full rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 sm:p-4 bg-gray-800 border-gray-700 text-gray-400", placeholder: "Price your product"%>
        </div>
        <!--<div>
          <label for="hs-feedback-post-comment-textarea-1" class="block mb-2 text-sm font-medium text-white">Comment</label>
          <div class="mt-1">
            <textarea id="hs-feedback-post-comment-textarea-1" name="hs-feedback-post-comment-textarea-1" rows="3" class="py-3 px-4 block w-full rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 sm:p-4 bg-gray-800 border-gray-700 text-gray-400" placeholder="Leave your comment here..."></textarea>
          </div>
        </div>-->
        <div class="mt-6 grid">
          <button type="submit" class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all focus:ring-offset-gray-800">Submit</button>
        </div>
      <% end %>
    </div>
    <!-- End Card -->
  </div>
</div>
<!-- End Comment Form -->
